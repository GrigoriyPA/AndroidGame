<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/interface_black">
            </solid>

            <stroke
                android:width="@dimen/interface_common_shape_button_box_outline_width"
                android:color="@color/interface_main_blue">
            </stroke>

            <corners
                android:radius="@dimen/interface_common_shape_button_box_outline_radius">
            </corners>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/interface_main_black">
            </solid>

            <stroke
                android:width="@dimen/interface_common_shape_button_box_outline_width"
                android:color="@color/interface_main_blue">
            </stroke>

            <corners
                android:radius="@dimen/interface_common_shape_button_box_outline_radius">
            </corners>
        </shape>
    </item>

</selector>